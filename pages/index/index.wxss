.covers {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.65);
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.addGif {
  position: fixed;
  top: 140rpx;
  right: 50rpx;
  width: 300px;
  height: 390px;
  z-index: 9999;
}

.add{
	display: none;
	height: 100rpx;
	width: 100rpx;
	position: fixed;
	bottom: 50rpx;
	right: 100rpx;
	z-index: 988;
	font-size: 120rpx;
	color: #c00;
	border:0;
	border-radius: 30rpx;
	padding:0;
	outline: 0;
	line-height: normal;
}
.navigator-hover{
	z-index: 988;
}
.mt40{
	margin-top: 40rpx;
}


.j_header {
  position: fixed;
  width: 100%;
  top: 0;
  background-image: linear-gradient(-60deg, #ef4d2e 0%, #ffdd3f 100%);
  color: #fff;
  z-index: 999;
	display: flex;
}
.j-title {
	position: absolute;
  text-align: center;
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #fff;
  font-weight: 300;
	z-index: 999;
}
.j-left{
	position: absolute;
	left: 0rpx;
  right: 0;
  bottom: 0;
	display: flex;
}
button[plain]{ border:0;padding:0;margin:0;margin-top:30rpx;margin-left:50rpx;color: #fff; }
.search{
	position: absolute;
	left: 100rpx;
  right: 0;
  bottom: 0;
  margin: auto;
	display: flex;
	background:#f8f8f8;
	margin-left:50rpx;
	height: 46rpx;
	line-height: 46rpx;
	border-radius: 15rpx;
	padding:10rpx 30rpx;
	color: #999;
	width: 40%;
}
.search .icon{margin-right:10rpx;}

/* 推荐小程序开始 */
.elite .hd{
	margin:40rpx;
	display: flex;
	justify-content: space-between;
  border-bottom:1rpx solid #ccc;
  padding-bottom: 20rpx;
}
.elite .hd h2{
  border-left:6rpx solid #ef4d2e;
  padding-left:20rpx;
}
.elite .hd .upElite{
	color: #ef4d2e;
}
.elite-list{
	display: flex;
	flex-flow:wrap;
	justify-content: first baseline;
	margin:0 40rpx;
}
.elite-item{
	width: 22%;
	margin:10rpx;
	line-height: 60rpx;
	color:#333;
	font-weight: 300;
	text-align: center;
}
.elite-item image{
	width:120rpx;
	height:120rpx;
	border: 1rpx solid #f90;
	padding:10rpx;
	border-radius: 10rpx;
}
.elite-item .title{
	font-size: 36rpx;
	max-width: 150rpx;
	text-overflow: ellipsis;
  white-space: nowrap;
	overflow: hidden;
}
/* 推荐小程序结束 */
.bgf{
	background: #fff;
}
.bgdff9fb{
  background: #dff9fb;
}